<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/recyclerView_head_note_imageView_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/recyclerView_head_note_textView_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/recyclerView_head_note_imageView_head"
            android:text="name"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/recyclerView_head_note_imageView_level"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/recyclerView_head_note_textView_nickName" />

        <TextView
            android:id="@+id/recyclerView_head_note_textView_follow"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/linearlayout_background_round"
            android:gravity="center"
            android:text="关注"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/recyclerView_head_note_linearLayout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/recyclerView_head_note_textView_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是帖子的内容" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/recyclerView_head_note_imageView_appreciate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/imageview_appreciate" />

            <TextView
                android:id="@+id/recyclerView_head_note_textView_appreciate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text="10" />

            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/imageview_read" />

            <TextView
                android:id="@+id/recyclerView_head_note_textView_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text="10" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/imageview_discuss" />

            <TextView
                android:id="@+id/recyclerView_head_note_textView_discuss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="10" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>